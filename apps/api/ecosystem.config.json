{
  "apps": [{
    "name": "kawou-api",
    "script": "src/server.js",
    "cwd": "/var/www/kawoukeravore/apps/api",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": 4000,
      "MAIL_USER": "${MAIL_USER}",
      "MAIL_PASS": "${MAIL_PASS}",
      "MAIL_TO": "${MAIL_TO}"
    },
    "log_file": "/var/log/pm2/kawou-api-combined.log",
    "out_file": "/var/log/pm2/kawou-api-out.log",
    "error_file": "/var/log/pm2/kawou-api-error.log",
    "time": true,
    "watch": false,
    "ignore_watch": [
      "node_modules",
      "logs",
      "*.log"
    ],
    "restart_delay": 4000,
    "max_restarts": 10,
    "min_uptime": "10s",
    "max_memory_restart": "200M",
    "node_args": "--max-old-space-size=200"
  }]
}